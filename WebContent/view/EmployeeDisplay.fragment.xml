<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:u="sap.ui.unified"
	xmlns:core="sap.ui.core">
	<l:Grid
		defaultSpan="L12 M12 S12"
		width="auto">
		<l:content>
			<f:SimpleForm
				id="SimpleDisplay"
				minWidth="1024"
				maxContainerCols="2"
				editable="true"
				layout="ResponsiveGridLayout"
				title="Employee"
				labelSpanL="3"
				labelSpanM="3"
				emptySpanL="4"
				emptySpanM="4"
				columnsL="1"
				columnsM="1"
				class="editableForm">
				<f:content>
					<Label text="ID" />
					<Text text="{/id}" />
					<Label text="Name" />
					<Text text="{/name}" />
					<Label text="Age" />
					<Text text="{/age}" />
					<Label text="Email" />
					<Text text="{/email}" />
					<Label text="Position" />
					<Text text="{/position}" />
					<Label text="Department" />
					<Text text="{/department}" />
					<Label text="Image" />
					<Image src="ImageController?method=show&amp;imgId={/imgId}"></Image>
				</f:content>
			</f:SimpleForm>
		</l:content>
	</l:Grid>
</core:FragmentDefinition>